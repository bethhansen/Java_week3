{{#partial "content"}}

    {{#if editTeam}}
        <h1>Edit this List!</h1>
        <form action="/teams/{{editTeam.id}}/update" method="team">
            Edit your List!
            <div class=form-group">
                <label for="member1">Team Name:</label>
                <input id="member1" name="member1" type="text" value="{{editTeam.raccoon}}" >
            </div>
            <div class="form-group">
                <label for="member2">Team Location:</label>
                <input id="member2" name="member2" type="text" value="{{editTeam.raccoon}}" >
            </div>
            <div class=form-group">
                <label for="member3">Team Goal:</label>
                <input id="member3" name="member3" type="text" value="{{editTeam.raccoon}}" >
            </div>
        </form>
    {{else}}
    <h1>Add a new Team!</h1>
    <form action="/member/new" method="team">
           <div class=form-group">
               <label for="member1">Team Name:</label>
               <input id="member1" name="member1" type="text" value="{{editTeam.raccoon}}" >
           </div>
           <div class="form-group">
               <label for="member2">Team Location:</label>
               <input id="member2" name="member2" type="text" value="{{editTeam.raccoon}}" >
           </div>
           <div class=form-group">
               <label for="member3">Team Goal:</label>
               <input id="member3" name="member3" type="text" value="{{editTeam.raccoon}}" >
           </div>
           <div>
               <button type="submit" class="btn btn-success">Add a gun</button>
           </div>
    </form>
   {{/if}}
{{/partial}}

{{> layout.hbs}}