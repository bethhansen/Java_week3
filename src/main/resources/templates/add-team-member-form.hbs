{{#partial "content"}}

    {{#if editTeam}}
        <h1>Edit this List!</h1>
        <form action="/teams/{{editTeam.id}}/update" method="team">
            Edit your List!
            <div class=form-group">
                <label for="member1">First name:</label>
                <input id="member1" name="member1" type="text" value="{{editTeam.raccoon}}" >
            </div>
            <div class="form-group">
                <label for="member2">Last name:</label>
                <input id="member2" name="member2" type="text" value="{{editTeam.raccoon}}" >
            </div>
            <div class=form-group">
                <label for="member3">Team name:</label>
                <input id="member3" name="member3" type="text" value="{{editTeam.raccoon}}" >
            </div>
            <div class=form-group">
                <label for="member4">Preferred programming language:</label>
                <input id="member4" name="member4" type="text" value="{{editTeam.raccoon}}" >
            </div>
        </form>
    {{else}}
    <h1>Add a new List!</h1>
    <form action="/member/new" method="team">
        <div class=form-group">
            <label for="member1">First Name:</label>
            <input id="member1" name="member1" type="text">
        </div>
        <div class="form-group">
            <label for="member2">Last Name:</label>
            <input id="member2" name="member2" type="text">
        </div>
        <div class=form-group">
            <label for="member3">Team Name:</label>
            <input id="member3" name="member3" type="text">
        </div>
        <div class=form-group">
            <label for="member4">Preferred programming language:</label>
            <input id="member4" name="member4" type="text">
        </div>
        <div>
    {{/if}}
            <button type="submit" class="btn btn-success">Add a Member</button>
        </div>
    </form>
{{/partial}}

{{> layout.hbs}}